<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/dl_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_height">
            <TextView
                android:textSize="@dimen/font_size_30"
                android:text="移动平台"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="58dp"
                android:layout_marginRight="47dp"
                android:layout_marginLeft="47dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/rectangle_blue_line"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/profile"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rmmis.platform.view.ClearEditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_marginRight="10dp"
                        android:id="@+id/et_username"
                        android:textColorHint="@color/ligth_grey"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/font_size_13"
                        android:background="@null"
                        android:hint="请输入用户名"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:background="@drawable/rectangle_blue_line"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@mipmap/lock"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.rmmis.platform.view.ClearEditText
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:inputType="textPassword"
                        android:layout_marginRight="10dp"
                        android:id="@+id/et_password"
                        android:textColorHint="@color/ligth_grey"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/font_size_13"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_username"
                            android:button="@drawable/checkbox_style"
                            android:textSize="13sp"
                            android:textColor="@color/blue"
                            android:paddingLeft="3dp"
                            android:layout_alignParentRight="true"
                            android:text="记住密码"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_login"
                    android:textSize="@dimen/font_size_17"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="登录"
                    android:layout_marginTop="33dp"
                    android:background="@drawable/rectangle_blue"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                     ></TextView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>